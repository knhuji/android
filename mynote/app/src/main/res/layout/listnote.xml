<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:hint="Tiêu đề"
        />
    <TextView
        android:textColor="#000"
        android:textStyle="normal"
        android:textSize="15dp"
        android:hint="Content"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/note_title"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp">
    </TextView>
    <TextView
        android:id="@+id/date_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:textColor="#807047"
        android:textStyle="italic"
        android:textSize="18dp"
        android:text="Time"></TextView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_menu_option"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:weightSum="2"
        android:paddingBottom="18dp"
        android:paddingTop="18dp">
        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@mipmap/icons8_trash_70px"
            android:background="@null">
        </ImageView>
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@mipmap/icons8_edit_70px"
            android:background="@null">
        </ImageView>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@null"
            android:src="@mipmap/icons8_delete_70px">
        </ImageView>
    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>